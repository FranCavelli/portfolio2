---

const { title, fromDate, toDate, link, description, imagen, role } = Astro.props ;

const planet = `src/assets/images/${imagen}.png`;

---

<li class="border-l-4 border-purple-900">
  <div class="md:flex flex-start">
    <div
      class="bg-purple-200  w-14 h-14 flex items-center justify-center rounded-full -ml-32"
    >
      <img src={ planet } alt={ 'Imagen trabajo' } class="w-14 h-10 shadow-xl"/>
    </div>
    <div class="block p-6 rounded-lg shadow-lg max-w-md ml-6 mb-10" style="background:#FFF5FF;">
      <div class="flex flex-col mb-4">
        <a
          href={link}
          target="_blank"
          class="font-medium text-purple-900 hover:text-purple-700 focus:text-purple-800 duration-300 transition ease-in-out text-sm"
          >{title}</a
        >
        <p>{role}</p>
        <div class="flex justify-between items-center">
            <span>{fromDate}</span>
            <span>{toDate}</span>
        </div>
      </div>
      <p class="text-gray-700 mb-6">
        {description}
      </p>
    </div>
  </div>
</li>
