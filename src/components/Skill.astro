---
const { title, icon, comment, prog } = Astro.props;


interface Prog {
  name: string;
}
---
<div class="w-1/3 p-4">
    <div class="flex flex-col shadow-lg p-4 rounded-md min-h-full">
        <p class="text-3xl font-medium mb-2"><i class={icon} /> {title} <span class="text-sm font-normal">{comment}</span></p>
        <div>
            <ul class="text-lg">
                {prog?.map((item:Prog) => (
                    <li class="">
                        <i class="fa-solid fa-splotch text-xs"></i> {item.name}
                    </li>
                ))}
            </ul>
        </div>
    </div>
</div>