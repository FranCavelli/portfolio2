---
import { Image } from "astro:assets"

import pondering from '../assets/images/pondering.png';
import Skill from './Skill.astro';

const lanProg = [
    {name: 'HTML'},
    {name: 'CSS'},
    {name: 'JavaScript/TypeScript'},
    {name: 'Python'},
    {name: 'NodeJS'},
    {name: 'Sass'},
    {name: 'PHP'},
    {name: 'SQL'},
]

const libs = [
    {name: 'React'},
    {name: 'Django'},
    {name: 'Flask'},
    {name: 'Bootstrap'},
    {name: 'Tailwind'},
    {name: 'ThreeJS'},
    {name: 'NextJS'},
    {name: 'Astro'},
    {name: 'Laravel/Codeigniter'},
]

const tools = [
    {name: 'Git'},
    {name: 'Github'},
    {name: 'Vercel'},
]

